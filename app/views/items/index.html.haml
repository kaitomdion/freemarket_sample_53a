    %h2.items-head ピックアップカテゴリー
    .items-contents
      -# = render partial: '/items/items_category/ladies', collection: @items_ladies
      %h3.items-contents__title.clearfix 
        =link_to "", class: "items-contents__title__name" do
          レディース新着アイテム
      .items-contents__boxes.clearfix
        - @items_ladies.each do |item|
          .items-contents__boxes__box
            =link_to item_path(item.id), class: "items-contents__boxes__box__link" do
              .items-contents__boxes__box__photo
              = image_tag(item.images.first.url.url, size: "213x220")
              .items-contents__boxes__box__text
                %h3.items-contents__boxes__box__text__sentence 
                  = item.name
                .items-contents__boxes__box__text__num
                  .items-contents__boxes__box__text__num__price
                    = number_to_currency item.price
                  .items-contents__boxes__box__text__num__like 
                    %i.far.fa-heart
                .items-contents__boxes__box__text__tax (税込)
