.container
  = render "main-header"
  .thumbnail
    .thumbnail__outer
      .thumbnail__outer__show{style: "left: 0px; width: 100%;"}
        .thumbnail__outer__show__item{style: "width: 100%;"}
          = link_to "", class: "thumbnail__outer__show__item__image" do
            #wrap
              %ul#slider
                %li.slide-item
                  %span.slide-inner
                    %img{:alt => "画像", :src => "https://www.mercari.com/jp/assets/img/common/jp/top/banner-camp.jpg"}/
                %li.slide-item
                  %span
                    = image_tag "home.png", size: "1440x390"
