.show-item
  = render "main-header"
  .show
    .show__name
      = @item.name
    .show__contents.clearfix
      .show__contents__item-photo
        %img.owl-lazy{:alt => "COACH 2way ボストンバッグ サーモンピンク", "data-src" => "https://static.mercdn.net/item/detail/orig/photos/m10468760096_1.jpg?1561443114", :src => "https://static.mercdn.net/item/detail/orig/photos/m10468760096_1.jpg?1561443114", :style => "opacity: 1;"}/
      %table.show__contents__detail-table
        %tbody
          %tr
            %th
              出品者
            %td
              = link_to "#", class: 'show__contents__detail-table__name' do
                スノーマン
              .show__contents__detail-table__face
                .show__contents__detail-table__face__user-ratings1
                  %i.fas.fa-laugh
                  %span
                    228
                .show__contents__detail-table__face__user-ratings2
                  
                  %i.fas.fa-meh
                  %span
                    6
                .show__contents__detail-table__face__user-ratings3
                  %i.fas.fa-frown
                  %span
                    4
          %tr
            %th
              カテゴリー
            %td
              = link_to "#", class: 'show__contents__detail-table__category1' do
                レディース
              = link_to "#", class: 'show__contents__detail-table__category2' do
                %i.fa.fa-chevron-right
                バッグ
              = link_to "#", class: 'show__contents__detail-table__category3' do
                %i.fa.fa-chevron-right
                ショルダーバッグ
          %tr 
            %th 
              ブランド
            %td
              = link_to "#", class: 'show__contents__detail-table__brand' do
                コーチ
          %tr
            %th
              商品の状態
            %td
              やや傷や汚れあり
          %tr
            %th
              配送料の負担
            %td
              送料込み(出品者負担)
          %tr
            %th
              配送元地域
            %td
              = link_to "#", class: 'show__contents__detail-table__delivary' do
                大阪府
          %tr
            %th
              配送日の目安
            %td
              4~7日で発送
    .show__text-center
      .show__text-center__price
        ￥ 5,555
      .show__text-center__tax
        (税込)
      .show__text-center__fee
        送料込み
    = link_to "購入画面に進む", "#", class: 'show__item-buy-btn'  
    .show__item-description
      %p.show__item-description__text
        = @item.description
  .detail-btn-box
    = link_to "商品の編集", new_item_path, id: 'edit__item-btn'
    %br
    = link_to "出品を一旦停止する", "#", id: 'stop__item-btn'
    -# = link_to "この商品を削除する", "#", id: 'delete__item-btn'    
    %btn#delete__item-btn この商品を削除する
  .detail-message
    .detail-message__container
      .detail-message__container__content
        = form_for (root_path) do |f|
          %p.detail-message__container__content__text
            相手のことを考え丁寧なコメントを心がけましょう。不快な言葉遣いなどは利用制限や退会処分となることがあります。
          = f.text_area :text, class: 'detail-message__container__content__textarea', type: 'text'
          = f.submit 'コメントする', class: 'detail-message__container__content__submit'


#overlay
#modalWindow
  .modal-body
    .modal-head.bold 確認
    .modal-head.text
      削除すると二度と復活できません。
      %br>/
      削除する代わりに停止することもできます。
      %br/
      = succeed "\u{672c}\u{5f53}\u{306b}\u{524a}\u{9664}\u{3057}\u{307e}\u{3059}\u{304b}\u{ff1f}" do
        %br/
  .clearfix
    .btn-cancel-div
      %button#modal-btn-cancel{"data-close" => "modal"} キャンセル
    .mo
    %form.modalform{:action => "/jp/items/cancel/m26056369093/", :method => "POST", :novalidate => "novalidate"}
      %input.inputmodal{:name => "__csrf_value", :type => "hidden", :value => "2b69939eda8517e27e650ea055c6d7a9c88604b6edfa6dfbe5083a654d0aacefcb1c723bfa2e131dbd4d6b9b4ebc77175cbd05179955a43cddf28ad786884d59d"}
      = link_to '削除する', "/items/#{@item.id}", method: :delete
      %button.modal-btn-delete{:type => "submit"}
