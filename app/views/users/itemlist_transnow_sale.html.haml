.wrapper
  = render '/items/main-header'
  .nav
    nav-bar
  .main-container-itemlist
    .main-content
      %section.main-content-section
        %h2.main-content-section__head
          売却済みの商品
        %ul.tabs
          %li.tabs--list.left.none
            出品中
          %li.tabs--list.middle
            取引中
          %li.tabs--list.right.active
            売却済み
        .tabs-content
          %ul.tabs-contents
            - @transactionItem.each do |transactionItem|
              %a{href: "/items/#{transactionItem.id}/editprev","data-turbolinks" => "false",class:"itemshow-link"}
                %li.tabs-contents__list
                  %figure.tabs-contents__list__figure
                    = image_tag (transactionItem.images.first.url.url),size: "40X40"
                  .tabs-contents__list__text
                    .tabs-contents__list__text__upper
                      = transactionItem.name
                    .tabs-contents__list__text__middle
                      %span.tabs-contents__list__text__middle--count
                        %i.far.fa-heart
                        %span.count
                          0
                        %span
                      %span.tabs-contents__list__text__middle--count
                        %i.far.fa-comment-alt
                        %span.count
                          0
                        %span
                      .tabs-contents__list__text__middle--status.saled
                        売却済
                  %i.fas.fa-chevron-right
    = render 'side-bar'
  = render 'items/item_banner'
  = render 'items/main-footer'