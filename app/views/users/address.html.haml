.address-box
  .header2
    %h1.header2_logo
      =link_to root_path, class: "header2_logo_url" do
        = image_tag("//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?2342399531",alt:"mercari",class:"header2_logo_url_image")

    %nav.header2_bar
      %ol.header2_clearfix
        %li.header2_text1
          .header2_status 会員情報
        %li.header2_text2
          .header2_status 電話番号認証
        %li.header2_text3
          .header2_status お届け先住所
        %li.header2_text4
          .header2_status 支払い方法
        %li.header2_text5
          .header2_status 完了

  .address-main
    .address-main-content
      %h2.address-main-content_head
        発送元・お届け先住所入力
      = form_for(new_user_path) do |f|
        .address-main-content_box_input

          = f.fields_for :profile do |profile_form|
            .address-form-group
              %P.address-form-group_label
                お名前
              %span.required-tag
                必須
              = profile_form.text_field :last_name, class: "address-form-group_input", placeholder: "例) 山田"
              = profile_form.text_field :first_name, class: "address-form-group_input", placeholder: "例) 彩"

            .address-form-group
              %P.address-form-group_label
                お名前カナ
              %span.required-tag
                必須
              = profile_form.text_field :last_name_kana, class: "address-form-group_input", placeholder: "例) ヤマダ"
              = profile_form.text_field :first_name_kana, class: "address-form-group_input", placeholder: "例) アヤ"

            .address-form-group1
              %P.address-form-group_label
                郵便番号
              %span.required-tag
                必須
              = f.text_field :nickname, class: "address-form-group_input", placeholder: "例)123-4567"

            .address-form-group1
              %P.address-form-group_label
                都道府県
              %span.required-tag
                必須
              
            .address-form-group1
              %P.address-form-group_label
                市区町村
              %span.required-tag
                必須
              = f.text_field :nickname, class: "address-form-group_input", placeholder: "例)横浜市緑区"
            
            .address-form-group1
              %P.address-form-group_label
                番地
              %span.required-tag
                必須
              = f.text_field :nickname, class: "address-form-group_input", placeholder: "例)青山1-1-1"
           
            .address-form-group1
              %P.address-form-group_label
                建物名
              %span.required-tag
                任意
              = f.text_field :nickname, class: "address-form-group_input", placeholder: "例)柳ビル103"

            .address-form-group1
              %P.address-form-group_label
                電話
              %span.required-tag
                任意
              = f.telephone_field  :sms, class: "address-form-group_input", placeholder: "例)09012345678"  
            
        .address-main-content_box_send
          
          .foom__a.actions
            = f.submit "次へ進む", class: "address-submit"

          


