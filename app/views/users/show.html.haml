.wrapper
  = render '/items/main-header'
  - breadcrumb :user, @user
  .breadcrumb
    = breadcrumbs pretext: "", separator: " &rsaquo; ",class: "breadcrumb__text"
  .main-content
    %section.main-content__userfield
      %a{:href => "https://www.mercari.com/jp/u/937091267/"}
        %figure
          %img{:alt => "", :height => "60", :src => "//static.mercdn.net/images/member_photo_noimage_thumb.png", :width => "60"}/
        %h2.bold ケンピー
        .mypage-number
          %div
            評価
            %span.bold 37
          %div
            出品数
            %span.bold 36
    %section.mypage-tab-container-notification-todo
      %ul.mypage-tabs
        %li.active
          %h3
            %a{"data-toggle" => "tab", :href => "#mypage-tab-notification"}
              お知らせ
              %span.mypage-nav-number.hidden-large
                2
        %li
          %h3
            %a{"data-toggle" => "tab", :href => "#mypage-tab-todo"}
              やることリスト
      .tab-content
        %ul#mypage-tab-notification.mypage-item-list.tab-pane.active
          %li
            %a.mypage-item-link{:href => "https://item.mercari.com/jp/m62002611702/"}
              %figure
                %img.lazyloaded{:alt => "", "data-src" => "//static.mercdn.net/thumb/members/391137840.jpg?1542582835", :src => "//static.mercdn.net/thumb/members/391137840.jpg?1542582835"}/
              .mypage-item-body
                .mypage-item-text 1925さん、他25名が「MacBook Pro 13イ...」にいいね！しました
                %time
                  %i.icon-time
                  %span 5 時間前
              %i.icon-arrow-right
          %li.mypage-go-list
            %a{:href => "/jp/mypage/todo/"} 一覧を見る
    %section.mypage-tab-container
      %h2.mypage-tab-head 購入した商品
      %ul.mypage-tabs
        %li.active
          %h3
            %a{"data-toggle" => "tab", :href => "#mypage-tab-transaction-now"}
              取引中
        %li
          %h3
            %a{"data-toggle" => "tab", :href => "#mypage-tab-transaction-old"}
              過去の取引
      .tab-content
        %ul#mypage-tab-transaction-now.mypage-item-list.tab-pane.active
          %li.mypage-item-not-found.bold 取引中の商品がありません
        %ul#mypage-tab-transaction-old.mypage-item-list.tab-pane
          %li
            %a.mypage-item-link{:href => "https://www.mercari.com/jp/transaction/order_status/m94632766835/"}
              %figure
                %img.lazyload{:alt => "", "data-src" => "//static.mercdn.net/thumb/photos/m94632766835_1.jpg?1562049256"}/
              .mypage-item-body
                .mypage-item-text
                  「アンカー Anker
                  A3902011 Bluetooth ヘッドホン」 を購入しました。
                  %span 取引が完了しました
                .mypage-item-status.bold.done
                  取引完了
              %i.icon-arrow-right
          %li.mypage-go-list
            %a{:href => "/jp/mypage/purchased/"} 一覧を見る
